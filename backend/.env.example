# Application settings
APP_NAME=Local Mind
APP_VERSION=0.1.0
DEBUG=true

# API settings
API_PREFIX=/api/v1

# CORS settings (comma-separated list)
CORS_ORIGINS=http://localhost:1420,tauri://localhost

# Additional allowed hosts (comma-separated list)
# Use this for your Proxmox server or other trusted hosts
# Example: ADDITIONAL_ALLOWED_HOSTS=192.168.1.100,10.0.0.5,proxmox.local
ADDITIONAL_ALLOWED_HOSTS=

# Directory settings (optional - defaults to ../data)
# DATA_DIR=/path/to/data
# LANCEDB_DIR=/path/to/lancedb
# UPLOADS_DIR=/path/to/uploads

# Model settings
EMBEDDING_MODEL=all-MiniLM-L6-v2
DEFAULT_LLM_MODEL=ollama:llama2
OLLAMA_BASE_URL=http://localhost:11434

# Document processing
CHUNK_SIZE=512
CHUNK_OVERLAP=50
MAX_FILE_SIZE_MB=50