{
  "app": {
    "name": "Local Mind",
    "version": "0.1.0",
    "description": "AI chat application with YouTube transcription and MCP support"
  },
  "backend": {
    "host": "0.0.0.0",
    "port": 52817,
    "api_base_url": "http://localhost:52817",
    "cors_origins": [
      "http://localhost:1420",
      "tauri://localhost",
      "*"
    ]
  },
  "models": {
    "embedding": {
      "default": "all-MiniLM-L6-v2",
      "options": ["all-MiniLM-L6-v2", "all-mpnet-base-v2"]
    },
    "llm": {
      "provider": "ollama",
      "default_model": "gpt-oss:latest",
      "ollama": {
        "host": "localhost",
        "port": 11434,
        "base_url": "http://localhost:11434",
        "models": ["llama3:instruct", "gpt-oss:latest", "llama2", "mistral"]
      },
      "openai": {
        "base_url": "https://api.openai.com/v1",
        "models": ["gpt-4o", "gpt-4", "gpt-3.5-turbo"]
      },
      "gemini": {
        "base_url": "https://generativelanguage.googleapis.com/v1beta/openai",
        "models": ["gemini-2.0-flash", "gemini-1.5-pro", "gemini-1.5-flash"]
      },
      "cerebras": {
        "base_url": "https://api.cerebras.ai/v1",
        "models": ["llama-4-scout-17b-16e-instruct", "llama3.1-8b", "llama3.1-70b"]
      },
      "claude": {
        "base_url": "https://api.anthropic.com/v1",
        "models": ["claude-sonnet-4-20250514", "claude-3-5-sonnet-20241022", "claude-3-opus-20240229"]
      },
      "mistral": {
        "base_url": "https://api.mistral.ai/v1",
        "models": ["mistral-large-latest", "mistral-medium-latest", "mistral-small-latest"]
      },
      "openai_compatible": {
        "base_url": "http://localhost:8080/v1",
        "models": []
      }
    }
  },
  "storage": {
    "data_dir": "./data",
    "database_path": "./data/local_mind.db"
  },
  "features": {
    "enable_youtube": true,
    "enable_mcp": true,
    "enable_offline_mode": true
  },
  "auth": {
    "enabled": true,
    "allow_signup": false
  }
}
